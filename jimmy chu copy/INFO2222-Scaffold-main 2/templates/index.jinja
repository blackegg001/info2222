 -->
{% extends 'base.jinja' %}


{% block content %} 
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f9f9f9;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    h1 {
        text-align: center;
        font-size: 5rem;
        color: #0074D9;
    }
    p {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 20px;
    }
    a {
        color: #333;
        text-decoration: none;
    }
    a:hover {
        color: #0074D9;
    }
</style>

<body>
    <h1 style = "text-align: center margin-bottom: 500px">Hello! Welcome to the site!</h1>
    <p "text-align: center margin-bottom: 500px"><a href={{ url_for('signup') }}> Sign Up</a></p>
    <p "text-align: center margin-bottom: 500px"><a href={{ url_for('login') }}> Login</a></p>
</body>  
{% endblock %}
